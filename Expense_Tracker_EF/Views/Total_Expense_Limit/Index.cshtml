@model IEnumerable<Expense_Tracker_EF.Models.Total_Expense_Limit>

@{
    ViewBag.Title = "Index";
}

<h2>
    <span class="text-slider-items" hidden>
        List of Total Expense Limit
    </span>
    <strong class="text-slider"></strong>
</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TotalExpenseLimit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TotalExpenseLimit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
