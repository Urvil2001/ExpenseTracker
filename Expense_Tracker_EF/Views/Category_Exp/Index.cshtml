@model IEnumerable<Expense_Tracker_EF.Models.Category_Exp>

@{
    ViewBag.Title = "Index";
}

<h2>
    <span class="text-slider-items" hidden>
        List of Categories
    </span>
    <strong class="text-slider"></strong>
</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Exp_Limit)
        </th>
        <th></th>
    </tr>
    @{ int totalAmount = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Exp_Limit)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        totalAmount +=Convert.ToInt32(item.Category_Exp_Limit);
    }
<tr>
    
    <td><b>Total Amount</b></td>
    <td colspan="2"><b>@totalAmount</b></td>

</tr>
    

</table>
